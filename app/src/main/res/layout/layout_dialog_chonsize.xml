<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/back_dialog"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:padding="12dp"
        android:text="Chọn chi tiết sản phẩm"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/bg_yelow_color"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn size"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#000000"
            ></TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:background="@drawable/grey_backgr"
            android:gravity="center"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:text="35"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="36"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="37"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="38"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="39"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="40"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="41"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="42"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="43"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="44"
                android:layout_height="wrap_content"></RadioButton>
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#000000"
            ></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="#FF0000"
                    android:textStyle="bold"></RadioButton>

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="#FF0000"
                    android:textStyle="bold"></RadioButton>

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textColor="#FF0000"
                    android:textStyle="bold"></RadioButton>

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#FF0000"
                    android:textStyle="bold"></RadioButton>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="#FF0000"></RadioButton>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dialog_no"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="30dp"
                android:layout_width="wrap_content"
                android:text="Hủy"
                android:background="@drawable/grey_backgr"
                android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dialog_them"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:text="Thêm"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>